{% extends '_layouts/base.njk' %}

{% set members = queen.members[0] %}

{% set discography = queen.discography[0] %}

{% block page_title %}QUEEN{% endblock %}

{% block page_description %}Official site.{% endblock %}

{% block content %}
<div class="container">
  <h2>Band Members</h2>
    <div class="row">
      {% for members in queen.members %}
        <div class="card">
          <img src="img/members/{{ members.image}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{ members.name }}</h5>
            <p class="card-text">{{ members.instruments}}.</p>
            <a href="{{ members.slug }}.html" class="btn btn-primary">Read more</a>
          </div>
        </div>
      {% endfor %}
    </div>
  <h2>Discography</h2>
    <div class="row">
      {% for discography in queen.discography %}
        <div class="col">
          <img src="img/discs/{{ discography.image }}" class="image-fluid" alt="...">
          <h5>{{ discography.title }}, {{ discography.year }}</h5>
        </div>
      {% endfor %}
    </div>
{% endblock %}