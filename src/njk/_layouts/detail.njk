{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
    <div class="row">
        <div class="col-sm-4">
            {% block info %}
                <img src="img/members/{{ members.imagebw }}" class="img-fluid">
            {% endblock %}
        </div>
        <div class="col-sm-8">
        {% block story %}
            <h1>{{ members.name }}</h1>
            <p><b>{{ members.instruments}}</b></p>
            <p><b>{{ members.tenure}}</b></p>
            <p><b>{{ members.birthplace}}</b></p>
            <p><b>{{ members.birthdate}}</b></p>
            {{ members.text | safe}}
        {% endblock %}
        </div>
    </div>
</article>
{% endblock %}